generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

model Task {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  status      TaskStatus @default(NOT_STARTED)
  dueDate     DateTime   @db.Date
  createdDate DateTime   @default(now())
  userId      Int        @default(0)
}

model User {
  id           Int     @id @default(autoincrement())
  username     String  
  email        String  @unique
  password     String
  createdDate   DateTime @default(now())
}
